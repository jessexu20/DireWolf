<div style="color: white;"><h1>Jobs You have Posted</h1>

<table>

  <thead>
    <tr>
      <th><div style="color:white;font:bold 120% sans-serif;">Name</div></th>
      <th><div style="color:white;font:bold 120% sans-serif;">Content</div></th>
      <th><div style="color:white;font:bold 120% sans-serif;">Field</div></th>
      <th><div style="color:white;font:bold 120% sans-serif;">Tag</div></th>
      <th><div style="color:white;font:bold 120% sans-serif;">Employer</div></th>
      <th><div style="color:white;font:bold 120% sans-serif;">Deadline</div></th>
      <th><div style="color:white;font:bold 120% sans-serif;">Applications</div></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @jobs.each do |job| %>
      <tr class="<%= cycle('list_line_odd','list_line_odd') %>">
        <td><%= job.name %></td>
        <td><%= job.content %></td>
        <td><%= job.field %></td>
        <td><%= job.tag %></td>
        <td><%= job.employer_name %></td>
        <td><%= job.deadline %></td>
        <td><%= link_to 'View Applications', appllist_list_path(:job_id=>job) %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>

</table>

<br>

<div style="   font: bold 110% sans-serif;"><%= link_to 'New Job', new_job_path %></div>
</div>