<div style="color: white;"><h1>Applications on this Job</h1></div>

<table>
  <thead>
  <tr>
    <th><div style="color:white;font:bold 120% sans-serif;">Name</div></th>
    <th><div style="color:white;font:bold 120% sans-serif;">Email</div></th>
    <th><div style="color:white;font:bold 120% sans-serif;">Phone</div></th>
    <th><div style="color:white;font:bold 120% sans-serif;">Major</div></th>
    <th><div style="color:white;font:bold 120% sans-serif;">Cover Letter</div></th>
    <th><div style="color:white;font:bold 120% sans-serif;">Apply time</div></th>
    <th><div style="color:white;font:bold 120% sans-serif;">Status</div></th>
    <th colspan="3"></th>
  </tr>
  </thead>


  <tbody>
  <% @jobapplications.each do |jobapplication| %>
      <tr class="<%= cycle('list_line_odd','list_line_odd') %>">
        <td><%= jobapplication.name %></td>
        <td><%= jobapplication.email %></td>
        <td><%= jobapplication.phone %></td>
        <td><%= jobapplication.major %></td>
        <td><%= jobapplication.coverletter %></td>
        <td><%= jobapplication.created_at %></td>
        <td><%= jobapplication.status %></td>
        <td><%= link_to 'Update Status',appllist_update_status_path(:jobapplication_id=>jobapplication) %></td>
      </tr>
  <% end %>
  </tbody>
</table>
