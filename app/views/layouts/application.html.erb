    <% else %>
        <%= link_to "Employer Login", new_employer_session_path, :class => 'navbar-link'  %> |
    <% end %>
    <% end %>

    <% if not employer_signed_in? and not user_signed_in? %>
          <% if admin_signed_in? %>
              Logged in as <strong><%= current_admin.email %></strong>.
